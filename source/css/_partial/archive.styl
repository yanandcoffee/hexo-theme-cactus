#archive
  .post-list
    padding: 0

    .post-item
      margin-bottom: 1rem
      margin-left: 0
      list-style-type: none

      .meta
        display: block
        margin-right: 0.5rem
        color: $color-meta
        font-size: 0.7em

  @media (min-width: 480px)
    .post-list
      .post-item
        display: flex
        align-items: center
        margin-bottom: 10px
        margin-left: 1rem

        .meta
          text-align: left
