#header
  margin: 0 auto 1rem
  width: 100%

  .title-wrapper
    align-items: flex-end

  h1
    margin-top: 0
    margin-bottom: 0
    color: $color-accent-2
    letter-spacing: .01em
    font-weight: bold
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem

    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    background-size: $logo-width $logo-height
    background-repeat: no-repeat

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-style: normal
    font-size: .8rem

@media (max-width: 700px)
  #header #title
    line-height: 1;

@media screen and (max-width: 480px)
  #header #title
    display: table
    min-height: $logo-height
    h1
      display: table-cell
      vertical-align: middle
      
  .subtitle
    display: none

  #header #nav
    ul
      a:hover
        background: none

      li
        display: none
        border-right: 0

      li.icon
        position: absolute
        top: 77px
        right: 1rem
        display: inline-block

    ul.responsive
      li
        display: block

    li:not(:first-child)
      padding-top: 1rem
      padding-left: $logo-width + 20px
      font-size: 1rem
