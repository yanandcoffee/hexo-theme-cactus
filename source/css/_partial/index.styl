.profile-pic
  width: 75px
  height: 75px
  margin-right: 20px

#about p
  margin-top: 0
  margin-bottom: 0.8em

.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 0.7rem
      color: $color-meta
      font-size: 0.7em

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      align-items: center
      margin-bottom: 10px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 10px
    p
      display: inline
